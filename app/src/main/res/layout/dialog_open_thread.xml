<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp" android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/thread_operation" />

        <Spinner
            android:id="@+id/open_or_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/open_or_close_thread" />

    </LinearLayout>

    <include layout="@layout/include_dialog_moderate_expiration" />
    <include layout="@layout/include_dialog_moderate_reason" />

</LinearLayout>