<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="android:colorPrimary">@color/primary_material_dark</item>
        <item name="android:colorAccent">@color/accent_material_light</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorLink">@color/accent_material_light</item>
    </style>
    
    <style name="AppTheme.NoActionBar" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:fitsSystemWindows">false</item>
        <!--item name="android:clipToPadding">false</item-->
    </style>

    <style name="AppTheme.NoActionBar.FullScreen" parent="android:Theme.Material.Light.NoActionBar.Fullscreen"> </style>

    <!-- animated theme. -->
    <style name="AppThemeAni" parent="AppTheme">
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:animation">@android:anim/accelerate_decelerate_interpolator</item>
    </style>

    <style name="PagerTabStrip" parent="AppTheme">
        <!-- Note: remember to use color as color & drawable as background -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/primary_material_dark</item>
    </style>

    <color name="ThemeBackground">@color/background_material_light</color>
    <color name="text_color_primary">@color/primary_text</color>
    <color name="text_color_secondary">@color/secondary_text</color>

</resources>
