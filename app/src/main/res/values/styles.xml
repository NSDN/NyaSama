<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.HoloAccent.Light.ColoredActionBar.Inverse">
        <item name="android:windowActionBarOverlay">@null</item>
        <!-- Note: remove shadow under actionbar
            REF: http://stackoverflow.com/questions/12246388/remove-shadow-below-actionbar -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- animated theme. -->
    <style name="AppThemeAni" parent="AppTheme">
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="PagerTabStrip" parent="HoloAccent.PagerTabStrip.Light">
        <!-- Note: remember to use color as color & drawable as background -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/ha__ab_background</item>
    </style>

    <color name="background_light_gray">#ececec</color>
    <color name="text_color_secondary">#999999</color>

</resources>
