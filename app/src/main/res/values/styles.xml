<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Note: remove shadow under actionbar
            REF: http://stackoverflow.com/questions/12246388/remove-shadow-below-actionbar -->
        <!--item name="android:windowContentOverlay">@null</item-->

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:fitsSystemWindows">true</item>
        <!--item name="android:clipToPadding">false</item-->

        <item name="android:actionBarStyle">@style/ActionBarStyle</item>

        <item name="android:colorPrimary">@color/ThemeColor</item>
        <item name="android:colorPrimaryDark">@color/ThemeColorDark</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:windowBackground">@color/ThemeBackground</item>
        <item name="android:textColorLink">@color/text_color_secondary</item>
        <item name="android:colorAccent">@color/ThemeColorLight</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:fitsSystemWindows">false</item>
        <!--item name="android:clipToPadding">false</item-->
    </style>

    <style name="AppTheme.NoActionBar.FullScreen" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:fitsSystemWindows">false</item>
        <!--item name="android:clipToPadding">false</item-->
    </style>

    <!-- animated theme. -->
    <style name="AppThemeAni" parent="AppTheme">
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="ActionBarStyle" parent="android:Widget.Material.Light.ActionBar">
        <item name="android:background">@color/ThemeColor</item>
    </style>

    <style name="PagerTabStrip" parent="AppTheme">
        <!-- Note: remember to use color as color & drawable as background -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/ThemeColor</item>
    </style>

    <style name="NavigationDrawerStyle" parent="android:Widget.Material.Toolbar">
        <item name="android:background">@color/ThemeBackground</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Material.Button">
        <item name="android:backgroundTint">@color/ThemeColor</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ProgressBarStyle" parent="@android:style/Widget.Material.Light.ProgressBar.Horizontal"> </style>



    <color name="ThemeColor">#d06b82</color>
    <color name="ThemeColorLight">#ffffff</color>
    <color name="ThemeColorDark">#973f53</color>
    <color name="ThemeBackground">#d6afaa</color>
    <color name="text_color_primary">#613640</color>
    <color name="text_color_secondary">#95737b</color>

    <!--color name="ThemeColor">#9d544d</color>
    <color name="ThemeColorLight">#ffffff</color>
    <color name="ThemeColorDark">#83433a</color>
    <color name="ThemeBackground">#cb876e</color>
    <color name="text_color_primary">#4c2523</color>
    <color name="text_color_secondary">#8b6663</color-->

</resources>
