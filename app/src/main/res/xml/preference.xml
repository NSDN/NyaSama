<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_category_general">
        <ListPreference
            android:defaultValue="默认"
            android:dialogTitle="@string/pref_diag_title_select_lang"
            android:entries="@array/language_preference"
            android:entryValues="@array/language_preference"
            android:key="@string/pref_key_language"
            android:summary="%s"
            android:title="@string/preference_language" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_key_animation"
            android:title="@string/preference_animation" />

        <ListPreference
            android:defaultValue="32"
            android:dialogTitle="@string/preference_cachesize"
            android:entries="@array/cache_size"
            android:entryValues="@array/cache_size_value"
            android:key="@string/pref_key_cache_size"
            android:summary="%s"
            android:title="@string/preference_cachesize" />
    </PreferenceCategory>

